<Page
    x:Class="SALIMUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SALIMUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFF4F3F3">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="JudulAplikasi.Margin" Value="0,0,20,0" />
                        <Setter Target="MenuDiKiri.IsPaneOpen" Value="False" />
                        <Setter Target="MenuDiKiri.DisplayMode" Value="CompactOverlay" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="JudulAplikasi.Margin" Value="0,0,140,0" />
                        <Setter Target="MenuDiKiri.IsPaneOpen" Value="False" />
                        <Setter Target="MenuDiKiri.DisplayMode" Value="CompactOverlay" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="JudulAplikasi.Margin" Value="0,0,140,0" />
                        <Setter Target="MenuDiKiri.IsPaneOpen" Value="True" />
                        <Setter Target="MenuDiKiri.DisplayMode" Value="CompactInline" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1080" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="JudulAplikasi.Margin" Value="0,0,140,0" />
                        <Setter Target="MenuDiKiri.IsPaneOpen" Value="True" />
                        <Setter Target="MenuDiKiri.DisplayMode" Value="CompactInline" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle Fill="#FF23C0FA" 
                   Style="{StaticResource Content}"/>
        <StackPanel Orientation="Horizontal" 
                    Canvas.ZIndex="2"
                    Margin="10">

            <TextBlock x:ConnectionId='4' Name="JudulAplikasi" 
                       Margin="0,0,140,0"
                       Text="Salim"
                       Style="{StaticResource Judul}"/>
            <Button FontFamily="Segoe MDL2 Assets"
                    Content="&#xE700;" 
                    Background="{x:Null}" 
                    BorderBrush="{x:Null}" 
                    HorizontalAlignment="Stretch" 
                    Foreground="White" 
                    FontSize="24"
                    VerticalAlignment="Stretch"/>
        </StackPanel>
        <SplitView x:ConnectionId='1' Name="MenuDiKiri"
                   Grid.Row="1"
                   DisplayMode="CompactInline"
                   CompactPaneLength="55"
                   OpenPaneLength="250" 
                   PaneBackground="#FF00AEEF" 
                   IsPaneOpen="True">
            <SplitView.Pane>
                <ListBox SelectionMode="Single"
                         Background="{x:Null}">
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IkonFont}"
                                           Text="&#xE916;"/>
                            <TextBlock Style="{StaticResource CenteredWhiteFont}"
                                           Text="Atur durasi waktu"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IkonFont}"
                                       Text="&#xE992;"
                                       Margin="9,0,10,0"/>
                            <TextBlock Style="{StaticResource CenteredWhiteFont}"
                                       Text="Suara"/>
                            <ToggleSwitch HorizontalAlignment="Center" 
                                          Margin="88,0,0,0" 
                                          OnContent="" 
                                          OffContent="" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IkonFont}"
                                           Text="&#xEA8F;"/>
                            <TextBlock Style="{StaticResource CenteredWhiteFont}"
                                           Text="Pemberitahuan"/>
                            <ToggleSwitch HorizontalAlignment="Center" 
                                          Margin="20,0,0,0" 
                                          OnContent="" 
                                          OffContent="" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='2' Name="TombolRiwayat">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IkonFont}"
                                           Text="&#xE8F5;"/>
                            <TextBlock Style="{StaticResource CenteredWhiteFont}"
                                           Text="Riwayat"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='3' Name="HalamanYangAktif" />
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

